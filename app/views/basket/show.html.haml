= render 'shared/search_modal'
= render 'shared/navs'
.container.catalog
    .row
        = render 'shared/add_recipe'
        .col-sm-10.col-md-6.col-sm-offset-1
            %h2= t('basket.h2')
            %p= t('basket.text')
            %table.table#basket
                - @basket.each do |product|
                    %tr
                        %td
                            %p= product.ingridient.name
                        %td
                            - quantity = product.quantity % 1 == 0 ? product.quantity.to_i : product.quantity
                            %p#count= quantity
                        %td
                            %p#measure_name= product.measure.name