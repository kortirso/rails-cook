<p id="notice"><%= notice %></p>

<h1>Список рецептов</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Название в URL</th>
      <th>Категория</th>
      <th>Нац. кухня</th>
      <th>Путь к фото</th>
      <th>Описание</th>
      <th>Рецепт</th>
      <th>Пользователь</th>
      <th>Проверено?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.path_name %></td>
        <td><%= recipe.category_id %></td>
        <td><%= recipe.country_id %></td>
        <td><%= recipe.photo %></td>
        <td><%= recipe.caption %></td>
        <td><%= recipe.steps %></td>
        <td><%= recipe.user_id %></td>
        <td><%= recipe.visible %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

