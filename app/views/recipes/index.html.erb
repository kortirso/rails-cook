<p id="notice"><%= notice %></p>

<h1>Listing Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Short</th>
      <th>Category</th>
      <th>Country</th>
      <th>Photo</th>
      <th>Caption</th>
      <th>Steps</th>
      <th>User</th>
      <th>Visible</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.short %></td>
        <td><%= recipe.category_id %></td>
        <td><%= recipe.country_id %></td>
        <td><%= recipe.photo %></td>
        <td><%= recipe.caption %></td>
        <td><%= recipe.steps %></td>
        <td><%= recipe.user_id %></td>
        <td><%= recipe.visible %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
