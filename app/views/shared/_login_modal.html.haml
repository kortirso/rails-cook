.modal.fade.in#login
    .modal-dialog
        .modal-content
            .modal-header
                %button.close{'aria-hidden' => 'true', 'data-dismiss' => 'modal', type: 'button'} Ã—
                %h2.modal-title= t('auth.login')
            = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
                .modal-body
                    .col-md-7
                        = f.input :username, required: true, autofocus: true, label: t('auth.username')
                    .col-md-7
                        = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), label: t('auth.pass')
                    .clearfix
                    %div
                        = f.input :remember_me, as: :boolean, label: t('auth.remember') if devise_mapping.rememberable?
                    %br
                    %div
                        = f.button :submit, t('auth.in'), class: 'btn btn-small btn-success'
                .modal-footer
                    %p
                        = t('auth.socials')
                        = #render partial: 'welcome/social'