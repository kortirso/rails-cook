.modal.fade.in#sign_up
	.modal-dialog
		.modal-content
			.modal-header
				%button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} ×
				%h2.modal-title Регистрация на сайте
			= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
				.modal-body
					.col-md-7
						= f.input :email, required: true, autofocus: true, label: 'Электронная почта'
					.col-md-7
						= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), label: 'Пароль'
					.col-md-7
						= f.input :password_confirmation, required: true, label: 'Подтверждение пароля'
					.clearfix
					%br
					%div
						= f.button :submit, "Зарегистрироваться", class: 'btn btn-small btn-success'
				.modal-footer
					%p
						Регистрация через социальные сети
						= render partial: 'welcome/social'