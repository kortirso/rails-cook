<!DOCTYPE html>
<html>
<head>
  <title>RailsCook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render 'welcome/login_modal' %>
  <%= render 'welcome/sign_up_modal' %>
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/catalog/index"><%= image_tag("logo.png", class: "img-responsive", alt: "Логотип RoR") %></a>
    </div>
    <div class="navbar-collapse collapse">

      <ul class="nav navbar-nav">
        <li><%= link_to 'Каталог рецептов', '/catalog/all' %></li>
        <li><%= link_to 'Контакты', '/contacts' %></li>
        <% if user_signed_in? %>
          <li><span class="whiteOut">Signed in as <strong><em><%= getUserFromEmail(current_user.email) %></em></strong></span></li>
          <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete, :class => 'btn btn-small btn-danger' %></li>
        <% else %>
          <li><p><%= link_to "Sign up", "#sign_up", "data-toggle" => "modal", :id => "up", :class => 'btn btn-small btn-success' %></p></li>
          <li><p><%= link_to "Login", "#login", "data-toggle" => "modal", :id => "log", :class => 'btn btn-small' %></p></li>
        <% end %>
      </ul>

    </div>
  </nav>
  <%= yield %>

</body>
</html>